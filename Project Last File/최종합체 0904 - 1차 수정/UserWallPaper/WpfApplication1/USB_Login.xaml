<Window x:Class="UserWallPaper.USB_Login"
xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="LoginWindow" Height="180" Width="307" ResizeMode="NoResize" WindowStartupLocation="CenterScreen">

    <Grid >
        <Label Content="SIU Login" HorizontalAlignment="Center" VerticalAlignment="Top" FontSize="20"/>
        <Label Content="ID" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="63,42,0,0"/>
        <Label Content="PASSWORD" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,70,0,0"/>
        <TextBox x:Name="ID" TextWrapping="Wrap" HorizontalAlignment="Left" Height="23" VerticalAlignment="Top" Width="182" Margin="90,45,0,0"/>
        <PasswordBox x:Name="PASSWORD" HorizontalAlignment="Left" VerticalAlignment="Top" Width="182" Margin="90,73,0,0" Height="23"/>
        <Button x:Name="btn_Login" Content="로그인" HorizontalAlignment="Left" VerticalAlignment="Top" Width="75" Margin="63,110,0,0" IsDefault="True" Click="Login_Click"/>
        <Button x:Name="btn_Exit" Content="종료" HorizontalAlignment="Left" VerticalAlignment="Top" Width="75" Margin="162,110,0,0" Click="Close_Click"/>
    </Grid>
</Window>
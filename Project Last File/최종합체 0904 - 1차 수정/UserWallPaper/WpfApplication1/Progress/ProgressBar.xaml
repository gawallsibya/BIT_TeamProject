<Window x:Class="UserWallPaper.ProgressBar"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:wpfspark="clr-namespace:WPFSpark;assembly=WPFSpark"
        Height="65" Width="300" WindowStyle="None" ResizeMode="NoResize" AllowsTransparency="True" Background="Transparent"
        WindowStartupLocation="CenterScreen" ShowInTaskbar="False" Topmost="True">

    <Grid>
        <ProgressBar Value="{Binding Value}" Height="25" Margin="12,12,12,0" Name="ProgressBar1" Maximum="100" VerticalAlignment="Top" />
    </Grid>
</Window>

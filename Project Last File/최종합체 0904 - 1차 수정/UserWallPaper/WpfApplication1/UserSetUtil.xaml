<UserControl x:Class="UserWallPaper.UserSetUtil"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="50" d:DesignWidth="50" MouseLeftButtonDown="UserControl_MouseLeftButtonDown" >
    <Grid>
        <Grid.ContextMenu>
            <ContextMenu>
                <MenuItem Header="링크 추가" Click="CreateLinkFile" />
                <MenuItem Header="링크 삭제" Click="Delete_Userlnk" />
            </ContextMenu>
        </Grid.ContextMenu>

        <Grid.ToolTip>
            <ToolTip>
                <StackPanel>
                    <TextBlock><Run x:Name="FileName"/></TextBlock>
                </StackPanel>
            </ToolTip>
        </Grid.ToolTip>

        <Image x:Name="userfile" HorizontalAlignment="Left" Height="45" VerticalAlignment="Top" Width="45"/>

    </Grid>
</UserControl>